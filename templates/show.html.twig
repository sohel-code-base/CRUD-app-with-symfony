{% extends('layout.html.twig') %}

{% block title %}
Single Record
{% endblock %}

{% block body %}
<div class="container">
    <div class="row bg-primary text-center mb-3">
        <div class="col-md-12">
            <h1>Single Record</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card mb-3 bg-light" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{ '/uploads/' ~ student.photo }}" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><strong>Name: </strong>{{ student.name }}</h5>
                            <p class="card-text"><strong>ID: </strong>{{ student.id }}</p>
                            <p class="card-text"><strong>Class: </strong> {{ student.class }}</p>
                            <p class="card-text"><strong>Gender: </strong>{{ student.gender }}</p>
                            <p class="card-text"><strong>Address: </strong>{{ student.address }}</p>
                            <p class="card-text">
                                <strong>Subjects: </strong>
                                {% for subject in student.subjects %}
                                    {{ subject ~ ',' }}
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-12">
            <a href="/" class="btn btn-lg btn-secondary">Home</a>
        </div>
    </div>
</div>
{% endblock %}



